class Solution {
    public int maxOperations(int[] nums, int k) {
        Arrays.sort(nums);
        int n=nums.length;
        int l=0;
        int r=n-1;
        int cnt=0;
        int sum=0;
        while(l<r)
        {
            sum=nums[l]+nums[r];
            if(sum==k)
            {
                cnt++;
                l++;
                r--;
            }
            else if(sum>k)
            {
             r--;
            }
            else
            {
                l++;
            }
        }
        return cnt;
       
    }
}
